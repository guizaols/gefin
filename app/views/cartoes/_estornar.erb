<% form_remote_tag :url => {:action => 'estornar'}, :loading => "Element.show('loading_est_cartao')", :success => "Element.hide('loading_est_cartao')" do %>
  <table>
    <tr>
      <td class="field_descriptor">Data do Estorno</td>
      <td><%= text_field_tag :data_estorno, Date.today.to_s_br, :size => 10, :maxlength => 10, :onkeyup => "$(AplicaMascara('XX/XX/XXXX', this));" %></td>
    </tr>
    <%= campo_de_cadastro 'Justificativa', (text_area_tag 'justificativa', nil, :size => '30x5') %>
    <tr>
      <td></td>
      <td>
        <%= submit_tag 'Salvar' %>
        <%= button_to_function 'Cancelar' do |page| page << "Modalbox.hide($('form_para_estornar_cheques'));" end %>
        <%= loading_image 'est_cartao' %>
      </td>
    </tr>
  </table>
<% end %>
<%= mascara_para_data('data_estorno') %>
